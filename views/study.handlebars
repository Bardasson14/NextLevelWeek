<body id="study-page">
  <div id="container">

    <header class="page-header">
      <div class="top-bar-container">
        <a href="/"><img src="./img/icons/back.svg" alt="Voltar" /></a>
        <img src="./img/logo.svg" alt="Proffy" />
      </div>

      <div class="header-content">
        <strong>
          Esses são os Proffys disponíveis
        </strong>
        <form id="search-teachers" action="" method="GET">
          <div class="select-block">
            <label for="subject">Matéria</label>
            <select name="subject" id="subject">
              <option value="">Selecione uma opção</option>
              {{#each subjects}}
                <option value="{{this}}">{{this}}</option>
              {{else}}
              {{/each}}
            </select>
          </div>
          <div class="select-block">
            <label for="weekday">Dia da semana</label>
            <select name="weekday" id="weekday">
              <option value="" disabled hidden="">Selecione uma opção</option>
              {{#each weekdays}}
              <option value="{{this}}">{{this}}</option>
              {{else}}
              {{/each}}
            </select>
          </div>
          <div class="input-block">
            <label for="time">Hora</label>
            <input name="time" id="time" type="time" />
          </div>
          <button type="submit">Filtrar</button>
        </form>
      </div>
    </header>

    <main>
      {{#each teachers}}
      <article class="teacher-item">
        <header>
          <img src="{{photoURL}}" alt="{{name}}" />
          <div>
            <strong>{{name}}</strong>
            <span>{{subject}}</span>
          </div>
        </header>

        <p>
          {{bio}}
        </p>

        <footer>
          <p>Preço/hora<strong>R$ {{price}}</strong></p>
          <button type="button">
            <img src="./img/icons/whatsapp.svg" alt="Whatsapp" />Entrar em
            contato
          </button>
        </footer>
      </article>
      {{else}}
      {{/each}}
